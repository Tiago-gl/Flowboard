generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum HabitFrequency {
  DAILY
  WEEKLY
}

enum GoalStatus {
  ACTIVE
  COMPLETED
}

model User {
  id           String           @id @default(uuid())
  name         String
  email        String           @unique
  passwordHash String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  tasks        Task[]
  habits       Habit[]
  goals        Goal[]
  habitLogs    HabitLog[]
  layout       DashboardLayout?

  @@index([createdAt])
}

model Task {
  id          String       @id @default(uuid())
  userId      String
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  sortOrder   Int          @default(0)
  completedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([userId, dueDate])
}

model Habit {
  id            String         @id @default(uuid())
  userId        String
  name          String
  frequency     HabitFrequency
  targetPerWeek Int?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs          HabitLog[]

  @@index([userId, frequency])
}

model HabitLog {
  id        String   @id @default(uuid())
  habitId   String
  userId    String
  date      DateTime
  count     Int      @default(1)
  createdAt DateTime @default(now())
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
  @@index([userId, date])
}

model Goal {
  id           String     @id @default(uuid())
  userId       String
  title        String
  targetValue  Int
  currentValue Int        @default(0)
  unit         String
  weekStart    DateTime
  status       GoalStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, weekStart])
}

model DashboardLayout {
  id         String   @id @default(uuid())
  userId     String   @unique
  layoutJson String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
